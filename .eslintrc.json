{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "on",  // Disabling the no-explicit-any rule
    "@typescript-eslint/no-unused-vars": [
      "warn", 
      { 
        "argsIgnorePattern": "^_",       // Ignore function arguments that start with an underscore
        "varsIgnorePattern": "^formData" // Ignore the unused variable `formData`
      }
    ],
    "react/no-unescaped-entities": "on"  // Disable the rule for unescaped entities
  }
}
